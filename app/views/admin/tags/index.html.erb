<div class="dashboard-header">
  <h1>Tags</h1>
  <%= link_to "+ Nova tag", new_admin_tag_path, class:"button-black" %>
</div>

<div class="dashboard-table">
  <table>
    <thead>
      <tr>
        <th>
          Título
          <%# sort_link(@q, :title, 'Título') %>
        </th>
        <th>
          Descrição
          <%# sort_link(@q, :created_at, 'Data', default_order: :asc) %>
        </th>
        <th>
          Ações
        </th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>
            <%= link_to admin_tag_path(tag) do %>
              <%= tag.title %>
            <% end %>
          </td>
          <td>
            <%= tag.description %>
          </td>
          <td>
            <%= link_to edit_admin_tag_path(tag) do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to admin_tag_path(tag),
                method: :delete,
                data: { confirm: "Deletar projeto?" } do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="table-pagination">
    <%# paginate @tags %>
  </div>
</div>
